{% extends 'base.html.twig' %}

{% block title %}Afficher les sorties{% endblock %}

{% block body %}
    <h3 class="reveal- text-center mb-3 pt-5">Afficher une sortie</h3>

<div class="container-fluid mt-3">
    <div id="afficherSortie" class="reveal- row col-md-10 offset-md-1 pt-3">
        <div class="col-3 mb-4">
            <p class="fw-bold">Nom de la sortie :</p>
            <p class="fw-bold">Date et heure de la sortie :</p>
            <p class="fw-bold">Date limite d'inscription :</p>
            <p class="fw-bold">Nombre de places :</p>
            <p class="fw-bold">Durée :</p>
            <p class="fw-bold">Description et infos :</p>
        </div>

        <div class="col-4 mb-4">
            <p>{{ sortie.nom }}</p>
            <p>{{ sortie.dateHeureDebut.format("d/m/Y H:m") }}</p>
            <p>{{ sortie.dateLimiteInscription.format("d/m/Y") }}</p>
            <p>{{ sortie.nbInscriptionsMax }}</p>
            <p>{{ sortie.duree }} minutes</p>
            <p>{{ sortie.infosSortie }}</p>
        </div>

        <div class="col-2 mb-4">
            <p class="fw-bold">Campus :</p>
            <p class="fw-bold">Ville :</p>
            <p class="fw-bold">Lieu :</p>
            <p class="fw-bold">Rue :</p>
            <p class="fw-bold">Code Postal :</p>
            <p class="fw-bold">Latitude :</p>
            <p class="fw-bold">Longitude :</p>
        </div>

        <div class="col-3 mb-4">
            <p>{{ sortie.campusOrganisateur.nom }}</p>
            <p>{{ sortie.lieu.ville.nom }}</p>
            <p>{{ sortie.lieu.nom }}</p>
            <p>{{ sortie.lieu.rue }}</p>
            <p>{{ sortie.lieu.ville.codePostal }}</p>
            <p> vide intersidéral</p>
            <p> vide intersidéral</p>
        </div>
    </div>
</div>

<div class="reveal- container col-md-4 mt-4">
    <div class="row">
            <h4 id="listeParticipants" class="text-center">Liste des participants inscrits</h4>
            <table class="table table-responsive table-striped table-bordered bg-light">
                <thead class="bg-primary text-white">
                <tr class="text-center">
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in sortie.participants %}
                    <tr>
                        <td>{{ participant.pseudo }}</td>
                        <td class="text-center">{{ participant.nom }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
</div>
{% endblock %}