{% extends 'base.html.twig' %}

{% block title %}Hello GererProfilController!{% endblock %}

{% block body %}

    <h2 class="reveal- h3 mb-3 font-weight-normal text-center my-5 pt-4">Gérer le profil</h2>

    <div id="profil" class="reveal- d-flex offset-3 col-6 text-center py-2">
        <div class="col-md-12 px-5 py-2">
            {{ form_start(gererProfil)}}
            <label for="pseudo" class="mb-2">Pseudo</label>
            {{ form_widget(gererProfil.pseudo, {'attr': {'placeholder': participant.getPseudo(), 'class': 'mb-2', 'value':''}}) }}

            <label for="prenom" class="mb-2">Prenom</label>
            {{ form_widget(gererProfil.prenom, {'attr': {'placeholder': participant.getPrenom(), 'class': 'mb-2', 'value':''}}) }}

            <label for="nom" class="mb-2">Nom</label>
            {{ form_widget(gererProfil.nom, {'attr': {'placeholder': participant.getNom(), 'class': 'mb-2', 'value':''}}) }}

            <label for="telephone" class="mb-2">Telephone</label>
            {{ form_widget(gererProfil.telephone, {'attr': {'placeholder': participant.getTelephone(), 'class': 'mb-2', 'value':''}}) }}

            <label for="email" class="mb-2">Email</label>
            {{ form_widget(gererProfil.email, {'attr': {'placeholder': participant.getEmail(), 'class': 'mb-2', 'value':''}}) }}

            {{ form_widget(gererProfil.password, {'attr': {'placeholder': "••••••••", 'class': 'mb-2', 'value':''}}) }}

            <label for="campus" class="mb-2">Campus</label>
            {{ form_widget(gererProfil.campus, {'attr': {'class': 'mb-2'}}) }}

            <button class="btn btn-lg btn-primary btn-block mb-2 mt-4">Valider</button>
            {{ form_rest(gererProfil) }}
            {{ form_end(gererProfil, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}
